{
    "version": 10,
    "include": [
        "CMakeUnixPresets.json"
    ],
    "configurePresets": [
        {
            "name": "darwin",
            "hidden": true,
            "inherits": "unix"
        },
        {
            "name": "Debug",
            "displayName": "Debug (macOS)",
            "inherits": "darwin",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "Release",
            "displayName": "Release (macOS, RelWithDebInfo)",
            "inherits": "darwin",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo"
            }
        },
        {
            "name": "Distribution",
            "displayName": "Distribution (macOS, Release)",
            "inherits": "darwin",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "Sanitizers",
            "displayName": "Sanitizers (macOS, ASAN+UBSAN)",
            "inherits": "darwin",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo",
                "OMNIA_ENABLE_SANITIZERS": "ON"
            }
        }
    ]
}
