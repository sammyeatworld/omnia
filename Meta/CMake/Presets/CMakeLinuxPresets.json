{
    "version": 10,
    "include": [
        "CMakeUnixPresets.json"
    ],
    "configurePresets": [
        {
            "name": "linux",
            "hidden": true,
            "inherits": "unix"
        },
        {
            "name": "Debug",
            "displayName": "Debug (Linux)",
            "inherits": "linux",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "Release",
            "displayName": "Release (Linux, RelWithDebInfo)",
            "inherits": "linux",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo"
            }
        },
        {
            "name": "Distribution",
            "displayName": "Distribution (Linux, Release)",
            "inherits": "linux",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "Sanitizers",
            "displayName": "Sanitizers (Linux, ASAN+UBSAN)",
            "inherits": "linux",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo",
                "CMAKE_C_FLAGS": "-fno-omit-frame-pointer -fsanitize=address,undefined",
                "CMAKE_CXX_FLAGS": "-fno-omit-frame-pointer -fsanitize=address,undefined",
                "CMAKE_EXE_LINKER_FLAGS": "-fsanitize=address,undefined",
                "CMAKE_SHARED_LINKER_FLAGS": "-fsanitize=address,undefined"
            }
        }
    ]
}
